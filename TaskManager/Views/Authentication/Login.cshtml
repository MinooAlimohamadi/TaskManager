@model TaskManager.Logic.Service.Authentication.Dto.Login_dto
@{
    ViewData["Title"] = "Login";
}

<div class="card">
    <div class="card-body">
        <div class="text-center">
            <h2 class="card-title">Login</h2>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <hr />
            <form asp-controller="Authentication" asp-action="Login">
                <div class="form-group">
                    <label for="UserName">UserName</label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="UserName">
                    @Html.ValidationMessageFor(m => m.UserName,null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    @Html.ValidationMessageFor(m => m.Password,null, new { @class = "text-danger" })
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Login</button>
                <a asp-controller="Authentication" asp-action="Register" class="btn btn-outline-primary">Register</a>

            </form>
        </div>
    </div>
</div>
