@model List<TaskManager.Logic.Service.Authentication.Dto.User_dto>
@{
    ViewData["Title"] = "User";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title">User Manager</h2>
        <a asp-controller="Authentication" asp-action="Register" class="btn btn-outline-primary">Register</a>
        <div class="text-center">
            <hr />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FullName</th>
                        <th scope="col">UserName</th>
                        <th scope="col">#</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 1;
                    }
                    @foreach (var user in Model)
                    {
                        <tr>

                            <th scope="row">@i</th>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.UserName</td>
                            <td> <a asp-controller="Authentication" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-info">Edit</a> </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
